@model IEnumerable<ProjectManagerDB.Entities.Task>

@{
    ViewBag.Title = "Index";
}

<h2><span>@Session["ProjectTitle"]</span>'s Tasks</h2>
<hr />
<br />

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <a href="@Url.Action("Create", "Tasks")" class="btn btn-primary">New Task</a>
                <div class="nav navbar-nav navbar-right">
                    <a href="@Url.Action("List", "Tasks")" class="btn btn-primary">All Tasks</a>
                    <a href="@Url.Action("ListInProgress", "Tasks")" class="btn btn-primary">In Progress</a>
                </div>
            </div>
            <div class="panel-body">
                <table style="width:100%" class="table table-striped table-bordered table-hover datatables">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Description</th>
                            <th>Priority</th>
                            <th>Status</th>
                            <th>Options</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Priority)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Status)
                                </td>
                                <td>
                                    @if (item.Status.ToString().Equals("InProgress"))
                                    {
                                        <a href="@Url.Action("Edit", "Projects", new { id = item.ID })" class="btn btn-primary glyphicon glyphicon-edit"></a>
                                        <a href="@Url.Action("Status", "Projects", new { id = item.ID })" class="btn btn-primary glyphicon glyphicon-ok"></a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
