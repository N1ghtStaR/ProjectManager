@model IEnumerable<ProjectManagerDB.Entities.Income>

@{
    ViewBag.Title = "Index";
}

<h2><span>@Session["Username"]</span>'s Incomes</h2>
<hr />
<br />

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <a href="@Url.Action("Create", "Projects")" class="btn btn-primary">New Income</a>
            </div>
            <div class="panel-body">
                <table style="width:100%" class="table table-striped table-bordered table-hover datatables">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Amount</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Title)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Amount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
