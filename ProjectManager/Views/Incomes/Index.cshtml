@model IEnumerable<ProjectManager.Models.IncomeViewModel>

@{
    ViewBag.Title = "Index";
}

<h2><span>@Session["Username"]</span>'s Incomes</h2>
<hr />
<br />

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                @if (TempData["Message"] != null)
                {
                    <h4 class="text-muted text-success">@TempData["Message"]</h4>
                }
                <table style="width:100%" class="table table-striped table-bordered table-hover datatables">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Amount</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Title)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Amount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="btn-group" role="group" aria-label="...">
                    @if (ViewBag.Page >= 3)
                    {
                        <a href="@Url.Action("Index", "Incomes", new { page = 1 })" class="btn btn-default glyphicon glyphicon-step-backward"></a>
                    }
                    @if (ViewBag.Page > 1)
                    {
                        <a href="@Url.Action("Index", "Incomes", new { page = ViewBag.Page - 1 })" class="btn btn-default glyphicon glyphicon-menu-left"></a>
                    }
                    @if (ViewBag.Page != ViewBag.Max && ViewBag.Max > 1)
                    {
                        <a href="@Url.Action("Index", "Incomes", new { page = ViewBag.Page + 1 })" class="btn btn-default glyphicon glyphicon-menu-right"></a>
                    }
                    @if (ViewBag.Page < ViewBag.Max - 1)
                    {
                        <a href="@Url.Action("Index", "Incomes", new { page = ViewBag.Max })" class="btn btn-default glyphicon glyphicon-step-forward"></a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
